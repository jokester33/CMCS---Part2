@model IEnumerable<CMCS.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-4">
    <h2 class="text-center mb-3">My Submitted Claims</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">New Claim</a>
    </p>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate (R)</th>
                <th>Status</th>
                <th>Document</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LecturerName</td>
                    <td>@item.Hours</td>
                    <td>@item.Rate</td>
                    <td>
                        @if (item.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (item.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FilePath))
                        {
                            <a href="@item.FilePath" target="_blank">View</a>
                        }
                    </td>
                    <td>@item.DateSubmitted.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
